{{!-- Re-usable card for linking to posts --}}

<article class="{{post_class}}">
	<a href="{{url}}">
		{{#if feature_image}}
			{{> "feature-image"}}
		{{/if}}
		<div>
			<time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
			<h2>{{title}}</h2>
			<p>{{excerpt}}</p>
		</div>
	</a>
</article>
