{{!< default}}

{{#author}}
	<article>
		<h1>
			{{#if website}}
				<a href="{{website}}" target="_blank" rel="noopener">{{name}}</a>
			{{else}}
				{{name}}
			{{/if}}
		</h1>
		{{#if bio}}
			<p>{{bio}}</p>
		{{/if}}
		<footer>
			<div>
				{{#if facebook}}
					<a href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
				{{/if}}
				{{#if twitter}}
					<a href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
				{{/if}}
			</div>
			{{#if location}}
				<p>{{location}}</p>
			{{/if}}
		</footer>
	</article>
{{/author}}
